@using AydosRobotics_WEB.Models
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

<!-- Services -->
<div id="services" class="basic-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="h2-heading">@Localizer["OurTeamTitle"]</h2>
                <p class="p-heading">@Localizer["OurTeamText"]</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="text-box">
                    <i class="fas fa-microchip"></i>
                    <h4>@Localizer["Elektronik"]</h4>
                    <p>@Localizer["ElektronikText"]</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="text-box">
                    <i class="fas fa-cogs"></i>
                    <h4>@Localizer["Mekanik"]</h4>
                    <p>@Localizer["MekanikText"]</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="text-box">
                    <i class="fas fa-code"></i>
                    <h4>@Localizer["Yazılım"]</h4>
                    <p>@Localizer["YazılımText"]</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Of Services -->