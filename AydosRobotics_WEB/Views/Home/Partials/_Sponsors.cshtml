@using AydosRobotics_WEB.Models
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

<!-- Sponsors -->
<div id="sponsors" class="basic-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="h2-heading">@Localizer["Sponsors"]</h2>
                <p class="p-heading">@Localizer["SponsorsText"]</p>
            </div>
        </div>
        <div class="sponsor-carousel d-flex overflow-auto gap-4 py-3 justify-content-start">
            @for (var a = 1; a < 5; a++)
            {
                <img class="img-fluid rounded bg-white p-2 shadow-sm" src="~/images/sponsors/sponsor-@(a).png" alt="sponsor @a" style="height: 150px; margin:auto">
            }
        </div>
    </div>
</div>
<!-- End Of Sponsors -->